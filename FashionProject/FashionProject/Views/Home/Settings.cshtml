@{
    Layout = "../Shared/_Layout.cshtml";
}

@model FashionProject.Models.User;

@{
    ViewBag.Title = "Settings";

}
<h1>
    @Model.Username
</h1>

@if (Model.Avatar != null)
{
    <img style='width:500px; height:400px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Avatar))" />
}


<form asp-action="Settings" asp-controller="Home" method="post" enctype="multipart/form-data">
    <p>
        <label>Username</label>
        <input name="Username" class="form-control" />
    </p>
    <p>
        <label>Avatar</label>
        <input name="Avatar" type="file" class="form-control" />
    </p>
    <p>
        <label>Change password</label>
        <input name="CurrentPassword" type="password" class="form-control" placeholder="Current password" />
        <input name="NewPassword" type="password" class="form-control" placeholder="New password"/>
    </p>
    <p>
        <input type="submit" value="Submit" />
    </p>
</form>
